<%= render "layouts/errors", :object => @painting %>

<div class="form-wrapper">
  <%= simple_form_for @painting, html: { class: 'form-horizontal', multipart: true } do |f| %>

  <div class="form-group">
    <%= f.input :image %>
  </div>
  <div class="form-group text-center">
    <%= f.input :name, class: 'form-control' %>
  </div>
  <div class="form-group text-center">
    <%= f.input :condition, class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.input :price, class: 'form-control' %>
  </div>
  
  <div class="form-group text-center">
    <%= f.input :artist, class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.button :submit, class: 'btn-success' %>
    <% end %>
  </div>
</div>

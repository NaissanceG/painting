<div class="paintings-wrapper row">
  <div class="painting">
    <div class="painting-head">
      <div class="thumb-img">
      </div>
      <div class="name">
      </div>
    </div>
    <div class="image center-block" >
      <%= link_to (image_tag painting.image.url(:medium), class: 'img-responsive'), painting_path(painting) %>
      <div class="painting-bottom">
        <p class="artist">
          <div class="user-name">
            <%= painting.user.user_name %>
          </div>
          <%= painting.artist %>
        </p>
        <div class="comments" id="comments_<%= painting.id %>">
        <% if painting.comments %>
          <%= render painting.comments, painting: painting %>
          <% end %>
          </div>
      </div>
      <div class="comment-like-form row">
        <div class="like-button col-sm-1">
          <span class = "glyphicon glyphicon-heart-empty"></span>
        </div>
        <div class="comment-form col-sm-11">
          <%= form_for [painting, painting.comments.new], remote: true do |f| %>
          <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{painting.id}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
